@model IEnumerable<_2124802010277_LeTuanKiet_CuoiKy.Models.KyThi>
@using _2124802010277_LeTuanKiet_CuoiKy.Models
@{
    ViewBag.Title = "ManagerExams";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int pg = (int)ViewBag.pg;
    Pager p = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        p = ViewBag.Pager;
        pageNo = p.CurrentPage;
    }
}
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Danh Sách các kỳ thi</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <div class="d-md-flex" style="align-items: center">
                    <form class="input-group">
                        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" name="KeyWork" />
                        <button type="submit" class="btn btn-outline-primary" data-mdb-ripple-init
                                style="height: 35px">
                            search
                        </button>
                    </form>
                    <a href="@Url.Action("CreateExams","ManagerExams")"
                       class="btn btn-danger  d-none d-md-block pull-right ms-3 hidden-xs hidden-sm waves-effect waves-light text-white">
                        Tạo kỳ thi
                    </a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        @*Xây dựng nội dung ở đây*@

        @if (Model.Count() > 0)
        {
            <table class="table">
                <tr>
                    <th style="text-align: center">
                        @Html.DisplayNameFor(model => model.IdKyThi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TenKyThi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ngay)
                    </th>
                    <th style="text-align: center">
                        @Html.DisplayNameFor(model => model.SoThiSinh)
                    </th>
                    <th style="text-align: center">
                        @Html.DisplayNameFor(model => model.TinhTrang)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center">
                            @Html.DisplayFor(modelItem => item.IdKyThi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenKyThi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ngay)
                        </td>
                        <td style="text-align: center">
                            @Html.DisplayFor(modelItem => item.SoThiSinh)
                        </td>
                        <td style="text-align: center">
                            @Html.DisplayFor(modelItem => item.TinhTrang)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditExams", new { id = item.IdKyThi }) |
                            @Html.ActionLink("Detail", "DetailExams", new { id = item.IdKyThi }) |
                            @Html.ActionLink("Delete", "DeleteExams", new { id = item.IdKyThi })
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <main style="
                text-align: center;
                display: flex;
                flex-direction: column;
                min-height: 500px;
                justify-content: center;
                  ">
                <h1>Sorry!</h1>
                <p>
                    Chúng tôi không tìm thấy cuộc thi nào bạn muốn tìm
                </p>
                <a href="@Url.Action("Index","ManagerExams")">Xem tất cả</a>
            </main>
        }
    </div>
    <div class="container">
        <ul class="pagination justify-content-end">
            @for (int i = p.StartPage; i <= p.EndPage; i++)
            {
                <li class="page-item @(i==p.CurrentPage ? "active" : "")">
                    <a class="page-link" href="~/Admin/ManagerExams/Index?pg=@i">@i</a>
                </li>
            }
        </ul>
    </div>
</div>



