@model IEnumerable<_2124802010277_LeTuanKiet_CuoiKy.Models.BaiTap>
@using _2124802010277_LeTuanKiet_CuoiKy.Models
@{
    ViewBag.Title = "ManagerAssignment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    Pager p = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager!=null)
    {
        p = ViewBag.Pager;
        pageNo = p.CurrentPage;
    }
}
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Danh sách bài tập</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <div class="d-md-flex">
                    <form action="@Url.Action("Index","ManagerAssignment")" style="display: flex; flex-direction: row; width: 100%">
                        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" name="KeyWork" id="KeyWork" />
                        <button type="submit" id="btnSearch" class="btn btn-outline-primary" data-mdb-ripple-init
                                style="height: 35px">
                            search
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        @*Xây dựng nội dung ở đây*@

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenBaiTap)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TacGia)
                </th>
                <th style="text-align: center">
                    @Html.DisplayNameFor(model => model.SoLuotNop)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayDang)
                </th>
                <th style="text-align: center">
                    @Html.DisplayNameFor(model => model.DiemTrungBinh)
                </th>
                <th style="text-align: center">
                    @Html.DisplayNameFor(model => model.LuotThich)
                </th>
                <th style="text-align: center">
                    @Html.DisplayNameFor(model => model.LuotXem)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenBaiTap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TacGia)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.SoLuotNop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDang)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.DiemTrungBinh)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.LuotThich)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.LuotXem)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdBaiTap }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdBaiTap }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdBaiTap })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="container">
        <ul class="pagination justify-content-end">
            @for (int i = p.StartPage; i <= p.EndPage; i++)
            {
                <li class="page-item @(i==p.CurrentPage ? "active" : "")">
                    <a class="page-link" href="~/Admin/ManagerAssignment/Index?pg=@i">@i</a>
                </li>
            }
        </ul>
    </div>
</div>


